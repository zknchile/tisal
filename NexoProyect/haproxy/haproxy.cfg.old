#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global

#---------------------------------------------------------------------
# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
    mode                    tcp
    log                     global
#    option                  httplog
#    option                  dontlognull
#    option http-server-close
#    option forwardfor       except 127.0.0.0/8
#    option                  redispatch
#    retries                 3
#    timeout check           10s
    maxconn                 3000


listen stats 
    bind :9000
    mode http
    log global
    stats enable
    stats realm Haproxy\ Statistics 
    stats uri /haproxy_stats
    stats hide-version
    stats auth cruzflores:Carlos9951
    timeout client          1m

frontend dvi1_frontend
    bind *:9001
    mode tcp
    timeout client          8m
    default_backend dvi1_backend

backend dvi1_backend
    mode tcp
    server rserve1 17.208.193.51:4055 
    timeout connect         8m
    timeout server          8m

